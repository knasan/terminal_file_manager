{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ (tfm)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tui/tui/tfm", // âœ… Ihr spezifischer Pfad
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Startet das Programm vom Projekt-Root
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake build" // Stellt sicher, dass der Build Task existiert
        },
        // ... (Weitere Konfigurationen)
    ]
}